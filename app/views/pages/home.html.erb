<div class="banner"  style="background: linear-gradient(to bottom, rgba(180, 140, 28,1) 0%, rgba(0, 0, 0,0.1) 40%), url(<%= asset_path('gunsandbreakfast3.jpg') %>);">
  <div class="banner-content">
    <h1>Guns 'n breakfast</h1>
    <p>Collect your guns right and fast, don't miss tomorrow's breakfast</p>
    <form action='<%= weapons_url %>' class="control-group form-inline">
      <label><span id="intro">You need </span>
        <select name="category" id="category-search" class="form-control">
          <% Weapon::CATEGORIES.each_with_index do |c, i| %>
          <option value=<%= i + 1 %> ><%= c %></option>
          <% end %>
        </select>
      </label>
      <input name="from" id="from-date" type="text" class="form-control date-picker" data-date-format="dd/mm/yyyy" placeholder="from">
      <input name="to" id="to-date" type="text" class="form-control date-picker" data-date-format="dd/mm/yyyy" placeholder="to">
      <button type="submit" class="btn btn-primary">Search</button>
    </form>
  </div>
</div>
<div class="home-wrapper">
  <% products = @weapons.last(6)  %>
  <%= render 'shared/card', products: products %>
</div>

