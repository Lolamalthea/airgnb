<div class="container">
  <div class="row">
    <% products.each do |product| %>
      <div class="col-xs-12 col-sm-4">
        <div class="weapon-box-index">
          <div class="flexbox product-picture-index" style="background: linear-gradient(to bottom, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.1) 40%), url(<%= asset_path(product.picture) %>);">
            <h1 class="text-center"><%= product.name %></h1>
            <h2><%= product.price.to_i %>â‚¬</h2>
            <div class="owner-avatar">
             <%= link_to image_tag product.user.picture, :width => 50 %>
          </div>
          </div>
          <p><%= product.description %></p>
          <%= link_to weapon_path(product) do %>
            <div>
              <h3 class="btn btn-primary btn-center btn-margin">Details</h3>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
