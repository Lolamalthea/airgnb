<%= simple_form_for(@weapon) do |f| %>
    <%= f.input :name, placeholder: "Weapon name" %>
    <%= f.input :category, placeholder: "Category" %>
    <%= f.input :description, placeholder: "Description" %>
    <%= f.input :price, placeholder: "Price" %>
    <%= f.input :picture  %>
    <%= f.input :picture_cache, as: :hidden %>
    <%= f.button :submit, class: "btn btn-danger"  %>
<% end %>


